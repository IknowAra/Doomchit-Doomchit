<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/img_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        app:srcCompat="@drawable/lunchpad_background" />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="40dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/back_btn" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="60dp"
        android:gravity="right"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/guide_btn" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_below="@+id/imageButton2"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/record_btn" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="40dp">

        <ImageButton
            android:id="@+id/beatvolum1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="false"
            android:layout_marginBottom="40dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/volum_btn"/>
        <com.gigamole.library.ShadowLayout
            android:id="@+id/shadowLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:sl_shadow_angle="300"
            app:sl_shadow_color="#007A32F2"
            app:sl_shadow_distance="0dp"
            app:sl_shadow_radius="20dp"
            app:sl_shadowed="true"
            tools:ignore="MissingClass">
        <Button
            android:id="@+id/beat1_off"
            android:layout_width="110dp"
            android:layout_height="85dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="110dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_off_click" />

        <Button
            android:id="@+id/beat2_off"
            android:layout_width="110dp"
            android:layout_height="85dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="210dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_off_click" />

        <Button
            android:id="@+id/beat3_off"
            android:layout_width="110dp"
            android:layout_height="85dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="305dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_off_click" />

        <Button
            android:id="@+id/beat4_off"
            android:layout_width="110dp"
            android:layout_height="85dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="400dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_off_click" />

        <Button
            android:id="@+id/beat5_off"
            android:layout_width="110dp"
            android:layout_height="85dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="495dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_off_click" />

        <Button
            android:id="@+id/beat6_off"
            android:layout_width="110dp"
            android:layout_height="85dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="590dp"
            android:background="@drawable/button_off_click" />
        </com.gigamole.library.ShadowLayout>
        <com.gigamole.library.ShadowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:sl_shadow_angle="300"
            app:sl_shadow_color="@color/one_on"
            app:sl_shadow_distance="0dp"
            app:sl_shadow_radius="20dp"
            app:sl_shadowed="true"
            tools:ignore="MissingClass">
            <Button
                android:id="@+id/beat1_on"
                android:layout_width="110dp"
                android:layout_height="85dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="110dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_one_click" />

            <Button
                android:id="@+id/beat2_on"
                android:layout_width="110dp"
                android:layout_height="85dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="210dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_one_click" />

            <Button
                android:id="@+id/beat3_on"
                android:layout_width="110dp"
                android:layout_height="85dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="305dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_one_click" />

            <Button
                android:id="@+id/beat4_on"
                android:layout_width="110dp"
                android:layout_height="85dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="400dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_one_click" />

            <Button
                android:id="@+id/beat5_on"
                android:layout_width="110dp"
                android:layout_height="85dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="495dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_one_click" />

            <Button
                android:id="@+id/beat6_on"
                android:layout_width="110dp"
                android:layout_height="85dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="590dp"
                android:background="@drawable/button_one_click" />
        </com.gigamole.library.ShadowLayout>
    </RelativeLayout>


</RelativeLayout>